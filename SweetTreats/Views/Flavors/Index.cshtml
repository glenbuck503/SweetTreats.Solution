@{
  Layout = "_Layout";
}

@using SweetTreats.Models
@model List<SweetTreats.Models.Flavor>



  @if (Model.Count == 0)
  {
    <h4>No flavors listed.</h4>
    <br/>
    <h4>@Html.ActionLink("add a Flavor", "Create", "Flavors")</h4>
  }
  else
  {
    <h3>Flavors for @User.Identity.Name:</h3>
    <br/>
    @foreach(Flavor flavor in Model)
    {
      <h4>@Html.ActionLink($"{flavor.Description}", "Details", "Flavors", new { id = flavor.FlavorId})</h4>
    }
    <br/>
    <h4>@Html.ActionLink(" add Flavors", "Create", "Flavors")</h4>
    <h4>@Html.ActionLink(" log out", "Index", "Account")</h4>
    <h3>@Html.ActionLink("Home", "Index", "Home")</h3>
  }
