@{
  Layout = "_Layout";
}

@model SweetTreats.Models.Treat

<h2>Please choose a flavor of @Model.Name</h2>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)
  @Html.HiddenFor(model => model.Name)

  @Html.Label("Description")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save">
}
<br/>
<h3>@Html.ActionLink($"Return to {Model.Name}'s details page", "Details", new { id = Model.TreatId})</h3>
<h3>@Html.ActionLink("add new Flavor", "Create", "Flavors")</h3>