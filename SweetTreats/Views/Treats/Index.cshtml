@{
  Layout = "_Layout";
}

@using SweetTreats.Models
@model List<SweetTreats.Models.Treat>

  @if (Model.Count == 0)
  {
    <h4>There have been no treats added yet.</h4>
    <br/>
    <h4>@Html.ActionLink("add a Treat", "Create", "Treats")</h4>
    
  }
  else
  {
    <h3>Treats for @User.Identity.Name:</h3>
    <br/>
    @foreach(Treat treat in Model)
    {
      <h4>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId})</h4>
    }
    <br/>
    <h4>@Html.ActionLink("add Treats", "Create", "Treats")</h4>
  }
